<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/arco01"
    android:orientation="vertical"
    >

  <include
      layout="@layout/toolbar_default"
      android:id="@+id/toolbar_actionbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <ScrollView
      android:id="@+id/scrollView_cercapersone_detail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/toolbar_actionbar"
      android:layout_gravity="center"
      android:layout_margin="16dp"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="solutions.alterego.android.unisannio.ingegneria.IngegneriaCercapersoneDetailActivity"
        >

      <TextView
          android:id="@+id/detail_cercapersone_email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="@color/primaryDarkColor"
          tools:text="email"
          />

      <TextView
          android:id="@+id/detail_cercapersone_role"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/detail_cercapersone_email"
          android:layout_centerHorizontal="true"
          android:textAppearance="?android:attr/textAppearanceLarge"
          tools:text="role"
          />

      <TextView
          android:id="@+id/detail_cercapersone_office"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/detail_cercapersone_role"
          android:layout_centerHorizontal="true"
          android:textColor="@color/black"
          tools:text="office"
          />

      <TextView
          android:id="@+id/detail_cercapersone_phone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/detail_cercapersone_office"
          android:layout_centerHorizontal="true"
          android:textColor="@color/black"
          tools:text="phone"
          />

      <TextView
          android:id="@+id/detail_cercapersone_webpage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/detail_cercapersone_phone"
          android:layout_centerHorizontal="true"
          android:textColor="@color/black"
          tools:text="web page"
          />

      <TextView
          android:id="@+id/detail_cercapersone_tutoring"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/detail_cercapersone_webpage"
          android:layout_centerHorizontal="true"
          android:textColor="@color/black"
          tools:text="tutoring"
          />

      <TextView
          android:id="@+id/detail_cercapersone_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/detail_cercapersone_tutoring"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="@color/accentColor"
          android:textStyle="bold"
          tools:text="name"
          />
    </RelativeLayout>
  </ScrollView>

</RelativeLayout>
